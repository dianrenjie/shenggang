/**index.wxss**/

page {
  width: 100%;
  border-top: 2rpx solid #f2f2f2;
}

.container {
  padding: 20rpx 30rpx;
}

/* 模块一 轮播 是否显示圆点, 自动播放, 无缝滚动, 间隔, 选中点的颜色... */

.swiperImage {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

swiper {
  width: 690rpx;
  height: 320rpx;
}

/* 模块二 功能列表 */

.itemList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 690rpx;
  margin-top: 20rpx;
}

.iconItem {
  display: flex;
  flex-direction: column;
  width: 130rpx;
  padding: 20rpx 50rpx;
}

.iconImage {
  width: 130rpx;
  height: 130rpx;
}

.txt {
  color: #111;
  font-size: 30rpx;
  text-align: center;
  width: 130rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
