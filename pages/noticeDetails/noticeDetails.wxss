page {
  background: #eee;
}

.noticeItem {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.noticeTime {
  font-size: 28rpx;
  width: 250rpx;
  height: 50rpx;
  background: #999;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  margin: 20rpx 0rpx;
  border-radius: 10rpx;
}
.content{
  background: #fff;
  border-radius: 5px;
}
.noticeTitle {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 640rpx;
  border: 10rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 35rpx;
  font-weight: bold;
  line-height: 50rpx;
  /* letter-spacing: 2rpx; */
}
.noticeText {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 640rpx;
  padding: 20rpx;
  padding-top: 0px;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 50rpx;
  /* letter-spacing: 2rpx; */
}
