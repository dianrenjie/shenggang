.container {
  width: 690rpx;
  padding: 0rpx 30rpx 30rpx 30rpx;
}

/* 模块一 标题 */

.title {
  font-size: 40rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  padding: 0rpx 20rpx;
}

/* 模块二 时间栏 */

.time {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  line-height: 90rpx;
  font-size: 32rpx;
  padding: 0rpx 20rpx;
  color: #999;
  border-bottom: 2rpx solid #eee;
}

.imageImg {
  width: 48rpx;
  height: 46rpx;
}

button {
  padding: 0rpx;
  width: 48rpx;
  height: 46rpx;
  line-height: 100%;
  margin-top: 2rpx;
}

.button-hover {
  background-color: #fff;
}

button::after {
  border: none;
}

input {
  outline: none;
  border: none;
  list-style:  none;
}

/* 模块三 视图区域 */

.videoAndImage {
  position: relative;
  display: flex;
  padding-top: 40rpx;
  width: 690rpx;
  height: 390rpx;
}

.imageArea {
  display: flex;
  flex-direction: row;
}

.videoImg {
  width: 690rpx;
  height: 390rpx;
}

.playImg {
  position: absolute;
  width: 86rpx;
  height: 106rpx;
  left: 302rpx;
  top: 182rpx;
}


/* 模块四 文字 */

.textItem {
  padding: 40rpx 20rpx 0rpx 20rpx;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  line-height: 50rpx;
}

.line {
  margin-top: 20rpx;
  width: 690rpx;
  height: 2rpx;
  background: #eee;
}

