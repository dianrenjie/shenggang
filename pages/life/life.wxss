/* pages/life/life.wxss */

page {
  background: #fff;
}

.container {
  background: #fff;
}

.line {
  width: 750rpx;
  height: 2rpx;
  background-color: #eee;
  margin-left: -30rpx;
}

/* 模块一 主题背景 */

.theme {
  width: 750rpx;
  height: 258rpx;
}

/* 模块二 支部会议、组织活动 */

.selectArea {
  display: flex;
  flex-direction: row;
  width: 750rpx;
}

.selectItem {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  line-height: 90rpx;
  font-size: 28rpx;
  width: 374rpx;
  font-weight: bold;
}

.itemImage {
  width: 32rpx;
  height: 28rpx;
  margin-right: 20rpx;
}

/* 模块三  活动进展*/

.selectActivity {
  display: flex;
  flex-direction: row;
  width: 750rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 28rpx;
}

/* 模块四 活动名称、时间、地址 */

.activityArea {
  display: flex;
  flex-direction: column;
  padding: 0rpx 30rpx;
}

.itemName {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 10rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  letter-spacing: 2rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;  
  padding-left: 2%;
}

.rightImage {
  width: 18rpx;
  height: 32rpx;
}

.timeImage {
  width: 26rpx;
  height: 28rpx;
  margin-right: 20rpx;
}

.itemTime {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  color: #666;
  padding-left: 2%;
}

.tabBorer {
  border-bottom: 1px solid #f00;
  color: #f00;
}

.swiper {
  width: 100%;
  height: 1200px;
}

.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
}
.tab {
  float: left;
  width: 33.3333%;
  text-align: center;
  padding: 10rpx 0;
  font-size: 30rpx;
}
 
.topTabSwiper {
  
  border-bottom: 1px solid #ccc;
  zoom: 1;
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
.tabBorer {
  border-bottom: 1px solid #f00;
  color: #f00;
}
 
.swiper {
  width: 100%;
}
.elseImg image{
  padding-left: 5%;
}
.elseText{
  text-align: center;
} 


